{
  "name": "bitcoin-explorer",
  "version": "0.1.0",
  "description": "Slim Bitcoin block explorer built with Node.js and Express",
  "type": "module",
  "engines": {
    "node": "24.8.0"
  },
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "build": "node scripts/build.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --dir test/unit",
    "test:integration": "vitest run --dir test/integration",
    "coverage": "vitest run --coverage",
    "test:regtest": "node scripts/regtest/smoke.js",
    "ci": "npm run lint && npm run typecheck && npm run coverage",
    "bench:address": "node scripts/bench/run-ci.js",
    "bench:compare": "node scripts/bench/compare-results.js --current bench/current-results.json --baseline bench/leveldb-results.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrdemonbkgit/bitcoin-explorer.git"
  },
  "keywords": [
    "bitcoin",
    "explorer",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrdemonbkgit/bitcoin-explorer/issues"
  },
  "homepage": "https://github.com/mrdemonbkgit/bitcoin-explorer#readme",
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "lru-cache": "^11.2.1",
    "nunjucks": "^3.2.4",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.0",
    "prom-client": "^15.1.0",
    "ws": "^8.18.0",
    "zeromq": "^6.0.0-beta.19",
    "zod": "^4.1.9",
    "bip32": "^2.0.6",
    "bitcoinjs-lib": "^6.1.6",
    "level": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.5",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n": "^17.10.3",
    "globals": "^16.4.0",
    "supertest": "^7.1.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}
